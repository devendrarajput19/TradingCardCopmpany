@model IEnumerable<TradingCardCompany.Models.ShoppingCart>

@{
    ViewBag.Title = "Your Cart";
    int TotalAmount = 0;
}

<h2>Your Cart</h2>

@using (Html.BeginForm("AddOrder", "Shopping", FormMethod.Post))
{

    if (Model != null)
    {
        <table class="table-condensed" style="width: 100%">

            <tr style="padding-bottom: 20px;">
                <th>Card Photo</th>
                <th>Card Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
            <hr />
            @foreach (var item in Model)
            {
                TotalAmount += Convert.ToInt32(item.Total);
                <tr>
                    <td>
                        <img src="@Url.Content(item.ImagePath)" height="80px" width="100px" class="img-rounded" />
                    </td>
                    <td>
                        @item.Cardname
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.Total
                    </td>
                </tr>
            }
            <tr style="border-top: 2px solid maroon">

                <td colspan="4" style="text-align: right;">
                    <h3>Total Amount</h3>
                </td>
                <td style="text-align: left;">
                    <h3>@TotalAmount</h3>
                </td>

            </tr>

        </table>

        <tr style="text-align: right;">
            <td colspan="4">
                <input type="submit" value="Checkout" name="Checkout" class="btn btn-primary" id="SaveOrder" />
            </td>

           
                @*<td colspan="4">
                    <input type="submit" value="CreateOrder" name="CreateOrder" class="btn btn-primary" id="SaveOrder" />
                </td>*@
           

        </tr>


    }
    else
    {
        <h2>There are no Items in your Cart</h2>
        <div>
            @Html.ActionLink("Back to List", "ViewList", "Shopping")
        </div>
    }


}





